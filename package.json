{
  "name": "comsmanagement",
  "version": "1.0.0",
  "engines": {
    "node": "12.14.1"
  },
  "scripts": {
    "heroku-postbuild": "concurrently \"npm:install-*\"; concurrently \"npm:build-*\"; ",
    "install-api": "npm i --prefix api",
    "build-api": "npm run migrate --prefix api",
    "install-client": "npm i --prefix client",
    "build-client": "npm run build --prefix client",
    "api": "cd api && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run api\" \"npm run client\"",
    "start2": "nodemon api/server.js",
    "start": "npm start --prefix api",
    "*(updated)build-api": "npm run db-update --prefix api",
    "client": "cd client && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fs-tech-degs/capstone-project-2009-NH3R717.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier — single-quote — write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.4",
    "concurrently": "^5.3.0",
    "dread": "^2.3.0",
    "cross-env": "^7.0.2"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  }
}
