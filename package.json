{
  "name": "comsmanagement",
  "version": "1.0.0",
  "scripts": {
    "client": "cd reactapp/client && yarn start",
    "server": "cd reactapp/ && nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "cd react/app node server.js",
    "heroku-postbuild": "cd reactapp/client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
